<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomView">
        <attr name="start_angle" format="float" />
        <attr name="sweep_angle" format="float" />
        <attr name="show_text" format="boolean" />
        <attr name="text_color" format="color" />
        <attr name="text_size" format="dimension" />
        <attr name="text_content" format="string" />
        <attr name="border_width" format="dimension" />
        <attr name="border_bg_color" format="color" />
        <attr name="border_fg_color" format="color" />
        <attr name="progress_max" format="integer" />
        <attr name="progress_cur" format="integer" />
    </declare-styleable>

    <declare-styleable name="NetworkDashboard">
        <attr name="percent" format="integer"/>
    </declare-styleable>

    <declare-styleable name="TasksView">
        <attr name="task_size" format="integer" />
        <attr name="task_progress" format="integer" />
        <attr name="task_ic_normal" format="reference" />
        <attr name="task_ic_done" format="reference" />
    </declare-styleable>
</resources>